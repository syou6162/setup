#!/bin/bash
set -euxo pipefail

brew update

formulas=( \
  jq \
  wget \
  curl \
  git \
  tig \
  zsh \
  vim \
  tmux \
  peco \
  fish \
  nkf \
  watch \
  go \
  direnv \
  rbenv \
  nodenv \
  pyenv \
  tfenv \
  awslogs \
  helm \
  argo \
  coreutils \
  kayac/tap/ecspresso \
  minamijoyo/hcledit/hcledit \
  minamijoyo/tfmigrate/tfmigrate \
)

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done
