  tig \
  jq \
  zsh \
  vim \
  tmux \
  peco \
  fish \
  redis \
  nkf \
  watch \
  go \
  direnv \
  rbenv \
  nodenv \
  pyenv \
  pipenv \
  tfenv \
  ansible \
  mecab \
  vegeta \
  awslogs \
  helm \
  argo \
  kubectx \
  mackerelio/mackerel-agent/mackerel-agent \
  mackerelio/mackerel-agent/mkr \
  itchyny/tap/base58 \
  kayac/tap/ecspresso \
  minamijoyo/hcledit/hcledit \
  minamijoyo/tfmigrate/tfmigrate \
)

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done
