#!/bin/bash
set -euxo pipefail

brew update

formulas=( \
  wget \
  curl \
  git \
  tig \
  jq \
  zsh \
  vim \
  tmux \
  peco \
  fish \
  sshuttle \
  terraform \
  redis \
  nkf \
  watch \
  go \
  scala sbt \
  rbenv \
  nodenv \
  pyenv \
  ansible \
  awscli \
  mecab \
  vegeta \
  ecs-deploy \
  yarn \
  mackerelio/mackerel-agent/mackerel-agent \
  mackerelio/mackerel-agent/mkr \
)

for formula in "${formulas[@]}"; do
  tools/brew-install "$formula"
done
